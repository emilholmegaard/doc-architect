<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--
        Logback Configuration for doc-architect-core

        This file controls logging behavior for the core library.
        Logging levels can be overridden via system properties or environment variables.

        System Property Override: -Dlogback.level=DEBUG
        Environment Variable: LOGBACK_LEVEL=DEBUG
     -->

    <!-- Console Appender (for CLI usage) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger (INFO by default, can be overridden) -->
    <root level="${LOGBACK_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Scanner Package Logging (default: INFO) -->
    <logger name="com.docarchitect.core.scanner" level="${SCANNER_LOG_LEVEL:-INFO}" />

    <!-- Generator Package Logging (default: INFO) -->
    <logger name="com.docarchitect.core.generator" level="${GENERATOR_LOG_LEVEL:-INFO}" />

    <!-- Renderer Package Logging (default: INFO) -->
    <logger name="com.docarchitect.core.renderer" level="${RENDERER_LOG_LEVEL:-INFO}" />

    <!-- Reduce Jackson noise -->
    <logger name="com.fasterxml.jackson" level="WARN" />

    <!-- Reduce JavaParser noise -->
    <logger name="com.github.javaparser" level="WARN" />
</configuration>
